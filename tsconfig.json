{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": true
  },
  "include": [
    "App.tsx",
    "index.tsx",
    "global.d.ts",
    "types.ts",
    "vite.config.ts",
    "config/**/*.ts",
    "domain/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "services/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "backend"]
}
